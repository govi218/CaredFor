<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="450sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/main_scroll"
            android:layout_width="match_parent"
            android:layout_height="700sp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/schedule_image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/roundcorner"
                android:hapticFeedbackEnabled="false"
                android:padding="10dp"
                app:srcCompat="@drawable/calendar2"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/food_intake_image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_below="@+id/schedule_image"
                android:layout_toLeftOf="@+id/food_intake"
                android:layout_toStartOf="@+id/food_intake"
                android:background="@drawable/roundcorner"
                android:padding="10dp"
                app:srcCompat="@drawable/food2"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/hygiene_image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/food_intake_image"
                android:layout_alignStart="@+id/food_intake_image"
                android:layout_below="@+id/food_intake_image"
                android:background="@drawable/roundcorner"
                android:padding="10dp"
                app:srcCompat="@drawable/hygiene2"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/sleep_image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/hygiene_image"
                android:layout_alignStart="@+id/hygiene_image"
                android:layout_below="@+id/hygiene_image"
                android:background="@drawable/roundcorner"
                android:padding="10dp"
                app:srcCompat="@drawable/sleep2"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/mood_image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/activities_image"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/activities_image"
                android:background="@drawable/roundcorner"
                android:padding="10dp"
                app:srcCompat="@drawable/mood2"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/medication_image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/sleep_image"
                android:layout_alignStart="@+id/sleep_image"
                android:layout_below="@+id/sleep_image"
                android:background="@drawable/roundbutton"
                android:padding="10dp"
                app:srcCompat="@drawable/medication2"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/activities_image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/medication_image"
                android:layout_alignStart="@+id/medication_image"
                android:layout_below="@+id/medication_image"
                android:background="@drawable/roundcorner"
                android:padding="10dp"
                app:srcCompat="@drawable/activities2"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/schedule_image"
                android:layout_toRightOf="@+id/schedule_image"
                android:background="@drawable/roundcorner"
                android:gravity="start|center"
                android:text="@string/careschedule"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/food_intake"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/schedule"
                android:layout_alignStart="@+id/schedule"
                android:layout_below="@+id/schedule"
                android:background="@drawable/roundcorner"
                android:gravity="start|center"
                android:text="@string/food_intake"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hygiene"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/food_intake"
                android:layout_alignStart="@+id/food_intake"
                android:layout_below="@+id/food_intake"
                android:background="@drawable/roundcorner"
                android:gravity="start|center"
                android:text="@string/hygiene"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sleep"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/hygiene"
                android:layout_alignStart="@+id/hygiene"
                android:layout_below="@+id/hygiene"
                android:background="@drawable/roundcorner"
                android:gravity="start|center"
                android:text="@string/sleep"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/medication"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/sleep"
                android:layout_alignStart="@+id/sleep"
                android:layout_below="@+id/sleep"
                android:background="@drawable/roundcorner"
                android:gravity="start|center"
                android:text="@string/medication"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activities"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/medication"
                android:layout_alignStart="@+id/medication"
                android:layout_below="@+id/medication"
                android:background="@drawable/roundcorner"
                android:gravity="start|center"
                android:text="@string/activities"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mood"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignLeft="@+id/activities"
                android:layout_alignStart="@+id/activities"
                android:layout_below="@+id/activities"
                android:background="@drawable/roundcorner"
                android:gravity="start|center"
                android:text="@string/mood"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/date_view"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_above="@+id/scrollView4"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/senior_box"
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView4"
        android:layout_toLeftOf="@+id/date_view"
        android:layout_toStartOf="@+id/date_view"
        android:text="Button" />
</RelativeLayout>